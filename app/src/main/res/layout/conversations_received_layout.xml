<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="1dp">

    <TextView
        android:id="@+id/received_message_date_segment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:textColor="@color/primary_text_color"
        android:textSize="@dimen/conversation_properties_default_font_size_subtext"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:paddingEnd="80dp"
        android:paddingStart="8dp"
        android:orientation="vertical"
        android:id="@+id/conversation_received_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/message_received_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@drawable/received_messages_drawable"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/conversation_properties_default_font_size" />

        <TextView
            android:id="@+id/message_thread_received_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:visibility="gone"
            android:paddingStart="16dp"
            android:textColor="@color/secondary_text_color"
            android:textSize="@dimen/conversation_properties_default_font_size_subtext"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>